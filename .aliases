# ------------------------------------------------------------------
# | Aliases - 11.13.18                                             |
# ------------------------------------------------------------------

# standard navigation
  alias ..="cd .."

# go to documents
  alias docs="cd ~/Documents"

# go to desktop
  alias desk="cd ~/Desktop"

# clear
  alias c="clear"

# restart the mac ui
  alias killui="killall SystemUIServer"

# show list of all fills in long list format
  alias ll='ls -lhaG'

# restart finder
  alias killfind="killall Finder"

# open the .bashrc file in atom
  alias openbp="open -a /Applications/Atom.app ~/.bash_profile"

# open the .bashrc file in atom
  alias openbrc="open -a /Applications/Atom.app ~/.bashrc"

# open the .aliases file in atom
  alias openal="open -a /Applications/Atom.app ~/.aliases"

# start calculator
  alias calc="bc -l"

# show command history
  alias h="history"

# show available ports
  alias ports="netstat"

# restart bash
  alias rbash="source ~/.bashrc"

# find out what is using the most space
  alias space="du -h -d1"

# basic git commands
  alias gst='git status'
  alias gco='git checkout'
  alias gci='git commit'
  alias grb='git rebase'
  alias gbr='git branch'
  alias gad='git add -A'
  alias gpl='git pull'
  alias gpu='git push'

# cleans up the git log output
  alias glog='git log --date-order --all --graph --format="%C(green)%h%Creset %C(yellow)%an%Creset %C(blue bold)%ar%Creset %C(red bold)%d%Creset%s"'

# change the bash prompt
  PS1='\[\e[1m\T\] \[\e[38m\d\] \[\e[33m\]$(git branch 2>/dev/null | sed -n "s/* \(.*\)/\1 /p")\[\e[32m\w\] \[\e[22m\u\] \n $(if [[ $? == 0 ]]; then printf "\xF0\x9F\x98\xBB"; else printf "\xF0\x9F\x98\xBF"; fi)\[\e[0m\]  \[\e[38m\]$ \[\e[0m\]'
