# setup a ruby project

  # variables
  actions=(make_gemfile make_rakefile make_gitignore make_folders add_files init_repo)


  function build_ruby () {
    for i in "${actions[@]}"; do
       $i
    done
  }

   function progress () {
      INT=0.2
        for i in {1..3}; do
          echo -n "."
          sleep $INT
      done
   }

   function make_gemfile () {
      cp ~/templates/Gemfile Gemfile
      progress
      echo "generating Gemfile"
      bundle install
   }

   function make_rakefile () {
      cp ~/templates/Rakefile Rakefile
      progress
      echo "generating Rakefile"
    }

    function make_gitignore () {
       cp ~/templates/.gitignore .gitignore
       progress
       echo "generating .gitignore"
     }

    function make_folders () {
      cp -r ~/templates/test ./test
      cp -r ~/templates/lib ./lib
      progress
      echo "generating folders"
    }

    function add_files () {
      cp ~/templates/README.md README.md
      progress
      echo "generating README.md"
    }

    function init_repo () {
      git init
      echo -e "\nFinished! Your Ruby project skeleton is all set up."
    }

  # end project setup

# adding repo to github
  function add_repo () {
    git add *
    progress
    echo "adding files to track"
    git commit -m "first commit"
    progress
    echo "sending commit"
    git remote add origin "$@"
    progress
    echo "add origin"
    git push -u origin master
    progress
    echo "pushed to origin\n Huzzah! Your repo is now on GitHub!"
  }


# make a directory and go into it
  function mkd () {
    mkdir -p "$@" && cd "$@"
  }

# returns how many lines are in a file
  function file_lines () {
    function find_number () {
      cat $@ | wc -l
    }
    echo Your file $@ has $( find_number $@ ) lines.
  }

# go to the directory and list out the contents
  function cl () {
    cd $@ && ls -la
  }

# `o` with no arguments opens the current directory, otherwise opens the given location
# from mathiasbynens
  function o() {
  	if [ $# -eq 0 ]; then
  		open .;
  	else
  		open "$@";
  	fi;
  }

# `a` with no arguments opens the current directory in Atom, otherwise opens the given locations
# from mathiasbynens
  function a() {
  	if [ $# -eq 0 ]; then
  		atom .;
  	else
  		atom "$@";
  	fi;
  }

